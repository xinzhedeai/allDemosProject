body {
  background-color: #f5f5f5;
}
.jd_layout {
  position: relative;
  min-width: 300px;
  max-width: 640px;
  margin: 0 auto;
}
/* 搜索头部 */
.jd_header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 40px;
  border: 0;
  .jd_header_box {
    position: relative;
    margin: 0 auto;
    min-width: 300px;
    max-width: 640px;
    height: 40px;
    background: rgba(212, 32, 0, 0.8);
    .icon_logo {
      position: absolute;
      top: 4px;
      left: 10px;
      display: block;
      width: 60px;
      height: 36px;
      background-position: 0 -103px;
    }
  }
  form {
    width: 100%;
    height: 40px;
    padding-left: 75px;
    padding-right: 55px;
    .icon_search {
      display: block;
      position: absolute;
      top: 10px;
      left: 85px;
      width: 20px;
      height: 20px;
      background-position: -60px -109px;
    }
    input {
      margin-top: 5px;
      padding-left: 30px;
      width: 100%;
      height: 30px;
      border-radius: 15px;
      -webkit-border-radius: 15px;
      -moz-border-radius: 15px;
      -ms-border-radius: 15px;
      -o-border-radius: 15px;
    }
  }
  .login {
    display: block;
    width: 50px;
    height: 40px;
    text-align: center;
    line-height: 40;
    font-size: 15px;
    color: #fff;
  }
}
/* 轮播图 */
.jd_banner {
  position: relative;
  widows: 100%;
  overflow: hidden;
  ul:first-child {
    width: 800%;
    li {
      float: left;
      width: 12.5%;
      img {
        display: block;
        width: 100%;
      }
    }
  }
  ul:last-child {
    position: absolute;
    width: 118px;
    height: 6px;
    bottom: 10px;
    margin-left: -59px;
    li {
      float: left;
      width: 6px;
      height: 6px;
      margin-left: 10px;
      border: 1px solid #fff;
      border-radius: 3px;
      -webkit-border-radius: 3px;
      -moz-border-radius: 3px;
      -ms-border-radius: 3px;
      -o-border-radius: 3px;
      &:first-child {
        margin-left: 0;
      }
      &.now {
        background-color: #fff;
      }
    }
  }
}
/* 导航栏 */
.jd_nav {
  width: 100%;
  height: 150px;
  padding: 0 3.125px;
  border-bottom: 1px solid #e0e0e0;
  ul {
    width: 100%;
    margin-top: 11px;
    li {
      float: left;
      width: 25%;
      height: 69px;
      a {
        display: block;
        width: 100px;
        height: 100%;
        text-align: center;
        img {
          display: block;
          width: 40px;
          height: 40px;
          margin: 0 auto;
        }
        p {
          margin-top: 6px;
          font-size: 12px;
          color: #666;
        }
      }
    }
  }
}
/* 商品区块 */
.jd_product {
  margin: 5px;
}

